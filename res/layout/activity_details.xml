<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@raw/credentials_backgrund"
    tools:context=".DetailsActivity" >

    <EditText
        android:id="@+id/orientation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:text="Choose orientation:"
        android:textColor="#ffffff" />

    <EditText
        android:id="@+id/direction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="52dp"
        android:ems="10"
        android:text="Choose direction:"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/horizonatal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/orientation"
        android:layout_marginTop="17dp"
        android:text="horizontal"
        android:background = "@drawable/round_button" />

    <Button
        android:id="@+id/vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/horizonatal"
        android:layout_alignBottom="@+id/horizonatal"
        android:layout_alignRight="@+id/orientation"
        android:text="vertical"
        android:background = "@drawable/round_button" />

    <Button
        android:id="@+id/left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/vertical"
        android:layout_alignBottom="@+id/vertical"
        android:layout_alignLeft="@+id/direction"
        android:text="left"
        android:background = "@drawable/round_button" />

    <Button
        android:id="@+id/right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/left"
        android:layout_alignBottom="@+id/left"
        android:layout_alignRight="@+id/direction"
        android:layout_marginRight="28dp"
        android:text="right"
        android:background = "@drawable/round_button" />

    <Button
        android:id="@+id/done"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="24dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/round_button"
        android:text="done" />

    <TextView
        android:id="@+id/insert"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/horizonatal"
        android:layout_marginTop="32dp"
        android:layout_toLeftOf="@+id/vertical"
        android:text="Insert Coordinates"
        android:textColor="#ffffff" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/insert"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:text="i"
        android:textColor="#ffffff" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editText1"
        android:ems="10"
        android:text="j"
        android:textColor="#ffffff" />

</RelativeLayout>
